# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[{*.{c,h,conf,rules},Makefile}]
indent_style = tab
indent_size = 8
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yaml]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
